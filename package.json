{
  "name": "btsp",
  "version": "1.1.0",
  "description": "A TailwindCSS v2.2.7 starter package based on Pom-Chi.",
  "main": "/public/index.html",
  "scripts": {
    "build": "npx tailwindcss -i ./assets/css/tailwind.css --jit -o ./public/build/style.css",
    "prod": "TAILWIND_MODE=build npx tailwindcss -i ./assets/css/tailwind.css --jit -o ./public/build/style.css --minify",
    "watch": "npx tailwindcss -i assets/css/tailwind.css -o ./public/build/style.css --watch",
    "serve": "concurrently \"npx tailwindcss -i ./assets/css/tailwind.css -o ./public/build/style.css -w\"  \"live-server public --no-css-inject\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skrantzman/Basic-Tailwind-Playground.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/skrantzman/Basic-Tailwind-Playground.git"
  },
  "homepage": "https://github.com/skrantzman/Basic-Tailwind-Playground#readme",
  "dependencies": {
    "tailwindcss-cli": "^0.1.2"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "live-server": "^1.2.1"
  },
  "resolutions": {
    "chokidar": "3.5.2",
    "merge": "2.1.1",
    "glob-parent": "6.0.1"
  }
}
