{
  "name": "btsp",
  "version": "1.2.0",
  "description": "A TailwindCSS v3.1.8 starter package based on Pom-Chi.",
  "main": "/public/index.html",
  "scripts": {
    "build": "npx tailwindcss -i ./assets/css/tailwind.css -o ./public/build/style.css --watch",
    "prod": "npx tailwindcss -i ./assets/css/tailwind.css -o ./public/build/style.css --minify",
    "watch": "npx tailwindcss -i ./assets/css/tailwind.css -o ./public/build/style.css --watch",
    "serve": "concurrently \"npx tailwindcss -i ./assets/css/tailwind.css -o ./public/build/style.css -w\"  \"live-server public --no-css-inject\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skrantzman/Basic-Tailwind-Playground.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/skrantzman/Basic-Tailwind-Playground.git"
  },
  "homepage": "https://github.com/skrantzman/Basic-Tailwind-Playground#readme",
  "dependencies": {
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "live-server": "^1.2.2"
  },
  "resolutions": {
    "chokidar": "3.5.3",
    "glob-parent": "6.0.2",
    "merge": "2.1.1"
  }
}
